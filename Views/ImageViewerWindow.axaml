<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GeFeSLE.Views.ImageViewerWindow"
        Title="Image Viewer"
        WindowState="Maximized"
        Background="Black"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Grid>
        <!-- Background overlay that captures clicks -->
        <Border Background="Black" 
                Opacity="0.9"
                Name="BackgroundOverlay"
                PointerPressed="OnBackgroundPressed" />
        
        <!-- Scroll viewer for zoom and pan -->
        <ScrollViewer Name="ImageScrollViewer"
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      PointerWheelChanged="OnPointerWheelChanged"
                      PointerMoved="OnScrollViewerPointerMoved"
                      PointerReleased="OnScrollViewerPointerReleased">
            <Border Name="ImageBorder"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Image Name="ViewerImage"
                       Stretch="None"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       PointerPressed="OnImagePressed" />
            </Border>
        </ScrollViewer>
        
        <!-- Close button in top-right corner -->
        <Button Name="CloseButton"
                Content="✕"
                Width="40"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="20"
                Background="#80000000"
                Foreground="White"
                FontSize="20"
                FontWeight="Bold"
                BorderThickness="0"
                CornerRadius="20"
                Click="OnClosePressed" />
        
        <!-- Instructions overlay -->
        <TextBlock Text="Click image or press ESC to close • Scroll to zoom • Drag to pan"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="20"
                   Foreground="White"
                   Opacity="0.7"
                   FontSize="12" />
    </Grid>
</Window>
